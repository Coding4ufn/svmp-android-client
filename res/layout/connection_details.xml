<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SVMP Connection Details"
            android:textSize="@dimen/textSize_xlarge"
            android:layout_gravity="center_horizontal"/>

    <TableLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1.0"
            android:stretchColumns="1">
        <TableRow android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1.0">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Description"
                      android:textSize="@dimen/textSize_large"
                      android:layout_gravity="center_vertical|right" android:paddingLeft="@dimen/padding_normal"
                      android:paddingRight="@dimen/padding_normal"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText_description"
                      android:textSize="@dimen/textSize_medium" android:singleLine="true" android:inputType="text|textNoSuggestions|textCapSentences"
                      android:layout_gravity="center_vertical"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1.0">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Username"
                      android:textSize="@dimen/textSize_large"
                      android:layout_gravity="center_vertical|right" android:paddingLeft="@dimen/padding_normal"
                      android:paddingRight="@dimen/padding_normal"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/editText_username" android:textSize="@dimen/textSize_medium" android:inputType="text|textNoSuggestions"
                      android:layout_gravity="center_vertical"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1.0">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Host"
                      android:textSize="@dimen/textSize_large"
                      android:layout_gravity="center_vertical|right" android:paddingLeft="@dimen/padding_normal"
                      android:paddingRight="@dimen/padding_normal"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText_host"
                      android:textSize="@dimen/textSize_medium" android:inputType="text|textNoSuggestions"
                      android:layout_gravity="center_vertical"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1.0">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Port"
                      android:textSize="@dimen/textSize_large"
                      android:layout_gravity="center_vertical|right" android:paddingLeft="@dimen/padding_normal"
                      android:paddingRight="@dimen/padding_normal"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText_port"
                      android:textSize="@dimen/textSize_medium" android:inputType="number"
                      android:layout_gravity="center_vertical"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/button_save" android:layout_weight="1.0" android:textSize="@dimen/textSize_large"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="Cancel"
                android:id="@+id/button_cancel" android:layout_weight="1.0" android:textSize="@dimen/textSize_large"/>
    </LinearLayout>
</LinearLayout>